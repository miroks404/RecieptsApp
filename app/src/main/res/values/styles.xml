<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_alternates_regular</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NavButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/ButtonTextStyle</item>
        <item name="cornerRadius">@dimen/button_corner_radius_8</item>
        <item name="android:backgroundTint">@color/categoryButtonColor</item>
    </style>

    <style name="ButtonFavoriteStyle" parent="NavButtonStyle">
        <item name="android:drawableEnd">@drawable/ic_favorite</item>
        <item name="android:drawablePadding">@dimen/main_space_12</item>
        <item name="android:backgroundTint">@color/favoriteButtonColor</item>
    </style>

</resources>