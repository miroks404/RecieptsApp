<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/categoriesListFragment">

    <fragment
        android:id="@+id/categoriesListFragment"
        android:name="ru.miroks404.recieptsapp.ui.category.CategoriesListFragment"
        android:label="CategoriesListFragment"
        tools:layout="@layout/fragment_list_categories">
        <action
            android:id="@+id/action_categoriesListFragment_to_recipesListFragment"
            app:destination="@id/recipesListFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="ru.miroks404.recieptsapp.ui.recipes.favorites.FavoritesFragment"
        android:label="FavoritesFragment"
        tools:layout="@layout/fragment_favorites">
        <action
            android:id="@+id/action_favoritesFragment_to_recipeFragment"
            app:destination="@id/recipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/recipeFragment"
        android:name="ru.miroks404.recieptsapp.ui.recipes.recipe.RecipeFragment"
        android:label="RecipeFragment"
        tools:layout="@layout/fragment_recipe"/>
    <fragment
        android:id="@+id/recipesListFragment"
        android:name="ru.miroks404.recieptsapp.ui.recipes.recipesList.RecipesListFragment"
        android:label="RecipesListFragment"
        tools:layout="@layout/fragment_recipes_list">
        <action
            android:id="@+id/action_recipesListFragment_to_recipeFragment"
            app:destination="@id/recipeFragment" />
    </fragment>

    <action
        android:id="@+id/action_global_to_categories"
        app:destination="@id/categoriesListFragment" />

    <action
        android:id="@+id/action_global_to_favorites"
        app:destination="@id/favoritesFragment" />

</navigation>